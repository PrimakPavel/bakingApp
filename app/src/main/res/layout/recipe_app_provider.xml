<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/widget_margin">
    <TextView
        android:id="@+id/app_w_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_title"
        android:text="@string/appwidget_title"
        android:textColor="@color/textColorTertiary"
        android:textSize="@dimen/large_title_text_size"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/app_w_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/appwidget_ingredients"
        android:textColor="@color/textColorTertiary"
        android:textSize="@dimen/main_text_size"/>

</LinearLayout>